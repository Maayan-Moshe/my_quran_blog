<%- include('partials/header') %>

<main class="container my-5">
  <!-- Hero Section -->
  <div class="jumbotron bg-light p-5 rounded-3 mb-5">
    <h1 class="display-4">
      <i class="bi bi-journal-text text-primary"></i> 
      Welcome to My Quran Blog
    </h1>
    <p class="lead">
      A personal journey through the Holy Quran, exploring its wisdom and reflecting on its profound messages.
    </p>
    <hr class="my-4">
    <p>
      Each post captures my impressions and reflections from reading different Surahs (chapters) of the Quran.
      Join me as I discover timeless guidance and spiritual insights.
    </p>
  </div>

  <!-- Blog Posts -->
  <div class="row">
    <div class="col-12">
      <h2 class="mb-4">Recent Reflections</h2>
    </div>
    
    <% if (posts.length === 0) { %>
      <div class="col-12">
        <div class="alert alert-info">
          <i class="bi bi-info-circle"></i>
          No blog posts yet. Check back soon for new reflections!
        </div>
      </div>
    <% } else { %>
      <% posts.forEach(post => { %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100 shadow-sm post-card">
            <div class="card-body d-flex flex-column">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <span class="badge bg-primary">Surah <%= post.suraNumber %></span>
                <small class="text-muted">
                  <i class="bi bi-calendar3"></i> 
                  <%= new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                </small>
              </div>
              <h5 class="card-title"><%= post.suraName %></h5>
              <h6 class="card-subtitle mb-3 text-muted"><%= post.title %></h6>
              <p class="card-text flex-grow-1"><%= post.excerpt %></p>
              <a href="/post/<%= post.id %>" class="btn btn-outline-primary mt-2">
                Read More <i class="bi bi-arrow-right"></i>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>
</main>

<%- include('partials/footer') %>
