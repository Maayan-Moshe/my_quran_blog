<%- include('partials/header') %>

<main class="container my-5">
  <article>
    <!-- Post Header -->
    <div class="row mb-4">
      <div class="col-12">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active"><%= post.suraName %></li>
          </ol>
        </nav>
        
        <div class="d-flex align-items-center mb-3">
          <span class="badge bg-primary me-2">Surah <%= post.suraNumber %></span>
          <small class="text-muted">
            <i class="bi bi-calendar3"></i> 
            <%= new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
          </small>
        </div>
        
        <h1 class="display-5 mb-2"><%= post.suraName %></h1>
        <h2 class="h4 text-muted mb-4"><%= post.title %></h2>
        <hr>
      </div>
    </div>

    <!-- Post Content -->
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="post-content">
          <% post.content.split('\n\n').forEach(paragraph => { %>
            <% if (paragraph.trim()) { %>
              <p class="lead"><%= paragraph.trim() %></p>
            <% } %>
          <% }) %>
        </div>

        <!-- Back to Home -->
        <div class="mt-5 pt-4 border-top">
          <a href="/" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Back to All Posts
          </a>
        </div>
      </div>
    </div>
  </article>
</main>

<%- include('partials/footer') %>
